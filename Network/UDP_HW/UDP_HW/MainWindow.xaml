<Window x:Class="UDP_HW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDP_HW"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0" Grid.Row="0" Margin="10" FontSize="25" FontWeight="DemiBold" Text="Murad" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        
        <ListBox x:Name="MessagesList" Grid.Column="0" Grid.Row="1" Margin="10"/>

        <TextBox x:Name="MessageText" Grid.Column="0" Grid.Row="2" Margin="10" FontSize="15" FontWeight="DemiBold"/>
        <Button x:Name="SendBtn" Grid.Column="1" Grid.Row="2" Margin="10" Content="Send" FontSize="20" FontWeight="DemiBold" Click="SendBtn_Click"/>
    </Grid>
</Window>
