<Window x:Class="EFCodeFirst.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EFCodeFirst"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="30" >
            <TextBlock Text="Name" HorizontalAlignment="Center" Margin="20 20 20 0"/>
            <TextBox x:Name="NameTB" Margin="20 20 20 0"/>

            <TextBlock Text="Description" HorizontalAlignment="Center" Margin="20 20 20 0"/>
            <TextBox x:Name="DescriptionTB" Margin="20 20 20 0"/>

            <TextBlock Text="Price" HorizontalAlignment="Center" Margin="20 20 20 0"/>
            <TextBox x:Name="PriceTB" Margin="20 20 20 0"/>

            <TextBlock Text="Brand" HorizontalAlignment="Center" Margin="20 20 20 0"/>
            <TextBox x:Name="BrandTB" Margin="20 20 20 0"/>
            
            <Button Content="Add" Margin="20" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
