<Window x:Class="CountriesEF_HW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CountriesEF_HW"
        mc:Ignorable="d"
        Title="Countries" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.8*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Filter : " Grid.Row="0" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontWeight="DemiBold"/>
        <ComboBox x:Name="SortCB" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20" Width="200" Height="35">
            <ComboBoxItem Content="By Population"/>
            <ComboBoxItem Content="By GDP"/>
            <ComboBoxItem Content="By Name"/>
        </ComboBox>

        <ListView x:Name="CountriesLV" Grid.Row="1">
            
        </ListView>
    </Grid>
</Window>
