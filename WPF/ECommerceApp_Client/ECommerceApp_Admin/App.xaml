<Application x:Class="ECommerceApp_Admin.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ECommerceApp_Admin"
             xmlns:ViewModel="clr-namespace:ECommerceApp_Admin.ViewModel"
             xmlns:View="clr-namespace:ECommerceApp_Admin.View"
             StartupUri="View/MainWindowView.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type ViewModel:MainViewModel}">
            <View:MainWindowView></View:MainWindowView>
        </DataTemplate>

        <DataTemplate DataType="{x:Type ViewModel:AddViewModel}">
            <View:AddView></View:AddView>
        </DataTemplate>

        <DataTemplate DataType="{x:Type ViewModel:ChangeViewModel}">
            <View:ChangeView></View:ChangeView>
        </DataTemplate>

        <DataTemplate DataType="{x:Type ViewModel:DeleteViewModel}">
            <View:DeleteView></View:DeleteView>
        </DataTemplate>
    </Application.Resources>
</Application>
